          xmlns:db="http://docbook.org/ns/docbook"
          xmlns:scilab="http://www.scilab.org"
          xml:id="scatterly" xml:lang="en">
  <info>
    <pubdate>$LastChangedDate$</pubdate>
  </info>
    <refnamediv>
        <refname>scatterly</refname>
        <refpurpose>Short description</refpurpose>
    </refnamediv>
    <refsynopsisdiv>
        <title>Syntax</title>
        <synopsis>
            scatterly(x,y)
        </synopsis>
    </refsynopsisdiv>
    <refsection>
        <title>Arguments</title>
        <variablelist>
            <varlistentry>
                <term>x, y</term>
                <listitem>
                    <para>Columns or rows vectors of n real numbers specifying the abscissae and the ordinates of the centers of markers.</para>
                </listitem>
            </varlistentry>
        </variablelist>
    </refsection>
    <refsection>
        <title>Description</title>
        <variablelist>
            <varlistentry>
                <listitem>
                    <para>scatterly(x,y) creates a scatter plot with markers centered at the (x, y) set of coordinates.</para>
                    <para>The default type of the marker is a circle, the default color is "blue" .</para>
                </listitem>
            </varlistentry>
        </variablelist>
    </refsection>
    <refsection>
        <title>Examples</title>
        <programlisting role="example">
            // x and y initialisation
            x = linspace(0,2,100);
            y = exp(-x).*cos(10*x) + 0.2*rand(1,length(x));
            // create 2D scatter plot
            scatterly(x,y)
        </programlisting>
    </refsection>
